 <script>
 var jqscroll = $.noConflict()
    (function(jqscroll){
        jqscroll(window).on("load",function(){
            jqscroll("#content").mCustomScrollbar({
                scrollInertia:700,
                alwaysShowScrollbar: 2,
                MouseWheel:{ enable: true },
                scrollButtons:{ enable: false },
                keyboard:{ enable: true },
                scrollbarPosition:"inside",
            });
        });
    })(jQuery);
</script>

 

